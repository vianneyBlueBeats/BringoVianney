<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_operadorL"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/embalaje_txt"
        android:src="@drawable/fedex"
        android:layout_width="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_below="@id/image_operadorL"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/operador_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operador"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_operadorL"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_span="2"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/operador_txt"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/image_operadorL"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/precio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Embalaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_embalaje"
                android:textAlignment="center"
                android:layout_below="@+id/precio_txt"
                android:layout_alignLeft="@+id/precio_txt"
                android:layout_alignStart="@+id/precio_txt"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/embalaje_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_below="@+id/label_embalaje"
                android:layout_alignLeft="@+id/label_embalaje"
                android:layout_alignStart="@+id/label_embalaje"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:layout_marginLeft="10dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>